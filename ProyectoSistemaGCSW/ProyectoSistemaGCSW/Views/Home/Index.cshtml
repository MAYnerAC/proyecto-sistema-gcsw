@{
    ViewBag.Title = "Página Principal";
    Layout = null; // Esto evita que la vista use el layout por defecto
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Barra de navegación superior -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Sistema de Gestión de Software</a>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Iniciar Sesión", "Index", "Login", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <main class="container mt-5">
        <section class="jumbotron text-center">
            <div class="container">
                <h1 class="display-4">Gestión de la Configuración de Software</h1>
                <p class="lead">Docente: <strong>Mag. Ricardo Eduardo Valcárcel Alvarado</strong></p>
                <img src="~/images/team-placeholder.png" alt="Imagen del equipo desarrollador" class="img-fluid rounded-circle" style="max-width: 200px;">
            </div>
        </section>

        <div class="row text-center mb-5">
            <section class="col-md-4 mb-4">
                <h2>Metodología Utilizada</h2>
                <p>Este sistema está construido utilizando ASP.NET MVC con Entity Framework, ofreciendo una arquitectura limpia y modular.</p>
            </section>
            <section class="col-md-4 mb-4">
                <h2>Funciones Principales</h2>
                <p>Gestión de usuarios, proyectos, solicitudes de cambio, y tareas de manera segura y rápida.</p>
            </section>
            <section class="col-md-4 mb-4">
                <h2>Curso de Desarrollo</h2>
                <p>Desarrollado en el marco del curso "Gestión de la Configuración de Software" por estudiantes de Ingeniería de Sistemas.</p>
            </section>
        </div>

        <section class="text-center">
            <h2>Integrantes del Equipo</h2>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <ul class="list-group mt-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Paco Ramos, Aaron Pedro</strong>
                            <span class="badge badge-primary badge-pill">2018000654</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Justin Zinedine Zevallos Purca</strong>
                            <span class="badge badge-primary badge-pill">2020066924</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Mayner Gonzalo Anahua Coaquira</strong>
                            <span class="badge badge-primary badge-pill">2020067145</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Raul Marcelo Cuadros Napa</strong>
                            <span class="badge badge-primary badge-pill">2017057851</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Salinas Condori Erick Javier</strong>
                            <span class="badge badge-primary badge-pill">2020069046</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Soledad Noemí Maltrain Yáñez</strong>
                            <span class="badge badge-primary badge-pill">2011040531</span>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
