@model IEnumerable<ProyectoSistemaGCSW.Models.Miembro_Proyecto>

@{
    ViewBag.Title = "Miembros del Proyecto";
}

<h2>Miembros del Proyecto</h2>

<p>
    @Html.ActionLink("Agregar Nuevo Miembro", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="DatatableP" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Proyecto</th>
            <th>Rol</th>
            <th>Usuario</th>
            <th>Nivel</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Proyecto.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Rol.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Usuario.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.nivel)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_miembro_proyecto }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.id_miembro_proyecto }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id_miembro_proyecto }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
