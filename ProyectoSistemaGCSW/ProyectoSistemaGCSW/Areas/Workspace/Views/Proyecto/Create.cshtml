@model ProyectoSistemaGCSW.Models.Proyecto

@{
    ViewBag.Title = "Crear Proyecto";
}

<h2>Crear Proyecto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Proyecto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, "Nombre del Proyecto", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.nombre, new { @class = "form-control", type = "text", required = "required" })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.codigo_proyecto, "Código del Proyecto", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.codigo_proyecto, new { @class = "form-control", type = "text", required = "required" })
                @Html.ValidationMessageFor(model => model.codigo_proyecto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descripcion, "Descripción", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", rows = 3 })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fecha_fin, "Fecha de Finalización", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.fecha_fin, new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(model => model.fecha_fin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_metodologia, "Metodología", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_metodologia", null, htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.id_metodologia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_estado_proyecto, "Estado del Proyecto", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_estado_proyecto", null, htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.id_estado_proyecto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.url_repositorio, "URL del Repositorio (opcional)", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.url_repositorio, new { @class = "form-control", type = "url" })
                @Html.ValidationMessageFor(model => model.url_repositorio, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="form-check">
                    <input type="checkbox" name="usarPlantilla" value="true" class="form-check-input" id="usarPlantilla" checked style="transform: scale(1.5); margin-right: 10px;" />
                    <label class="form-check-label" for="usarPlantilla" style="font-size: 1.1em;">
                        Usar Plantilla
                    </label>
                </div>
                <p style="margin-top: 5px; color: #666; font-size: 0.9em;">
                    Selecciona esta opción para generar elementos predefinidos según la metodología elegida.
                </p>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la Lista", "MisProyectos", "Proyecto", new { area = "Workspace" }, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
