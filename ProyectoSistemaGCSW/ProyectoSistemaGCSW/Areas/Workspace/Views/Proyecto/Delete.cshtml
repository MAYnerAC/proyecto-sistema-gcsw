@model ProyectoSistemaGCSW.Models.Proyecto

@{
    ViewBag.Title = "Eliminar Proyecto";
}

<h2 class="text-danger mb-4">Eliminar Proyecto</h2>

<h3 class="text-warning">¿Estás seguro de que deseas eliminar este proyecto?</h3>

<div class="card shadow-sm p-4 mb-4 bg-white rounded">
    <h4 class="card-title text-secondary">Detalles del Proyecto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4 font-weight-bold text-dark">
            @Html.DisplayNameFor(model => model.Estado_Proyecto.nombre)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Estado_Proyecto.nombre)
        </dd>

        <dt class="col-sm-4 font-weight-bold text-dark">
            @Html.DisplayNameFor(model => model.Metodologia.nombre)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Metodologia.nombre)
        </dd>

        <dt class="col-sm-4 font-weight-bold text-dark">
            @Html.DisplayNameFor(model => model.Usuario.nombre)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Usuario.nombre)
        </dd>

        <dt class="col-sm-4 font-weight-bold text-dark">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt class="col-sm-4 font-weight-bold text-dark">
            @Html.DisplayNameFor(model => model.codigo_proyecto)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.codigo_proyecto)
        </dd>

        <dt class="col-sm-4 font-weight-bold text-dark">
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt class="col-sm-4 font-weight-bold text-dark">
            @Html.DisplayNameFor(model => model.fecha_inicio)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.fecha_inicio, "{0:dd/MM/yyyy}")
        </dd>

        <dt class="col-sm-4 font-weight-bold text-dark">
            @Html.DisplayNameFor(model => model.fecha_fin)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.fecha_fin, "{0:dd/MM/yyyy}")
        </dd>

        <dt class="col-sm-4 font-weight-bold text-dark">
            @Html.DisplayNameFor(model => model.estado)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.estado)
        </dd>

        <dt class="col-sm-4 font-weight-bold text-dark">
            @Html.DisplayNameFor(model => model.url_repositorio)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.url_repositorio)
        </dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions mt-4">
        <button type="submit" class="btn btn-danger mr-2">Eliminar</button>
        @Html.ActionLink("Cancelar", "MisProyectos", "Proyecto", new { area = "Workspace" }, new { @class = "btn btn-secondary" })
    </div>
}
