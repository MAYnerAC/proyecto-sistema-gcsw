@model ProyectoSistemaGCSW.Models.Elemento_Tarea

@{
    ViewBag.Title = "Agregar Elemento";
}

<h2>Agregar Elemento a la Tarea</h2>

@using (Html.BeginForm("AddElement", "Tarea", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Seleccionar Elemento de Configuración", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_elemento_configuracion", null, new { @class = "form-control" })
                @Html.ValidationMessage("id_elemento_configuracion", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="form-check">
                    <input type="checkbox" name="es_principal" value="S" class="form-check-input" id="esPrincipalElemento" style="transform: scale(1.5); margin-right: 10px;" />
                    <label class="form-check-label" for="esPrincipalElemento" style="font-size: 1.1em;">
                        Marcar como Principal
                    </label>
                </div>
                <p style="margin-top: 5px; color: #666; font-size: 0.9em;">
                    Selecciona esta opción si este elemento es principal para la tarea.
                </p>
            </div>
        </div>


        <input type="hidden" name="id_tarea" value="@Model.id_tarea" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Agregar</button>
                @Html.ActionLink("Cancelar", "Details", "Tarea", new { id = Model.id_tarea }, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}
