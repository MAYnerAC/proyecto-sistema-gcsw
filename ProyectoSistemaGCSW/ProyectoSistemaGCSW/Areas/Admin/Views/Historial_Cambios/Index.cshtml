@model IEnumerable<ProyectoSistemaGCSW.Models.Historial_Cambios>

@{
    ViewBag.Title = "Historial de Cambios";
}

<h2>Historial de Cambios</h2>

<p>
    @Html.ActionLink("Crear Nuevo Cambio", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="DatatableP" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Tabla</th>
            <th>ID Registro</th>
            <th>Tipo de Cambio</th>
            <th>Fecha de Cambio</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Usuario.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.tabla)</td>
                <td>@Html.DisplayFor(modelItem => item.id_registro)</td>
                <td>@Html.DisplayFor(modelItem => item.tipo_cambio)</td>
                <td>@Html.DisplayFor(modelItem => item.fecha_cambio)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_historial }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.id_historial }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id_historial }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
