@model IEnumerable<ProyectoSistemaGCSW.Models.Version_Elemento>

@{
    ViewBag.Title = "Versiones de Elemento";
}

<h2>Versiones de Elemento</h2>

<p>
    @Html.ActionLink("Crear Nueva Versión", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="DatatableP" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Elemento de Configuración</th>
            <th>Número de Versión</th>
            <th>Descripción</th>
            <th>Fecha de Creación</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Elemento_Configuracion.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.numero_version)</td>
                <td>@Html.DisplayFor(modelItem => item.descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.fecha_creacion)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_version }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.id_version }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id_version }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
