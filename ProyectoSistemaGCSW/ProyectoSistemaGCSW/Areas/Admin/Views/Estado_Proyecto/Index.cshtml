@model IEnumerable<ProyectoSistemaGCSW.Models.Estado_Proyecto>

@{
    ViewBag.Title = "Estados de Proyecto";
}

<h2>Estados de Proyecto</h2>

<p>
    @Html.ActionLink("Crear Nuevo Estado", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="DatatableP" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre del Estado</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_estado_proyecto }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.id_estado_proyecto }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id_estado_proyecto }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
