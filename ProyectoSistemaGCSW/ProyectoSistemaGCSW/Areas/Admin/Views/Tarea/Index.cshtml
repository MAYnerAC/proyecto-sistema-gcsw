@model IEnumerable<ProyectoSistemaGCSW.Models.Tarea>

@{
    ViewBag.Title = "Tareas";
}

<h2>Tareas</h2>

<p>
    @Html.ActionLink("Crear Nueva Tarea", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="DatatableP" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Estado</th>
            <th>Prioridad</th>
            <th>Proyecto</th>
            <th>Título</th>
            <th>Fecha de Creación</th>
            <th>Fecha Límite</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Estado_Tarea.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Prioridad.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Proyecto.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.fecha_creacion)</td>
                <td>@Html.DisplayFor(modelItem => item.fecha_limite)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_tarea }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.id_tarea }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id_tarea }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
