@model IEnumerable<ProyectoSistemaGCSW.Models.Miembro_Tarea>

@{
    ViewBag.Title = "Miembros en Tareas";
}

<h2>Miembros en Tareas</h2>

<p>
    @Html.ActionLink("Asignar Nuevo Miembro", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="DatatableP" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID Miembro del Proyecto</th>
            <th>Título de la Tarea</th>
            <th>Es Principal</th>
            <th>Fecha de Asignación</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Miembro_Proyecto.id_miembro_proyecto)</td>
                <td>@Html.DisplayFor(modelItem => item.Tarea.titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.es_principal)</td>
                <td>@Html.DisplayFor(modelItem => item.fecha_asignacion)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_miembro_tarea }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.id_miembro_tarea }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id_miembro_tarea }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
