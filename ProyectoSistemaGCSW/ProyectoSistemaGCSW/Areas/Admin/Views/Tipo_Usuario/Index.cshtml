@model IEnumerable<ProyectoSistemaGCSW.Models.Tipo_Usuario>

@{
    ViewBag.Title = "Tipos de Usuario";
}

<h2>Tipos de Usuario</h2>

<p>
    @Html.ActionLink("Crear Nuevo Tipo de Usuario", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="DatatableP" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre del Tipo de Usuario</th>
            <th>Estado</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.estado)</td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.id_tipo_usuario }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Detalle", "Details", new { id = item.id_tipo_usuario }, new { @class = "btn btn-sm btn-info" })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id_tipo_usuario }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
